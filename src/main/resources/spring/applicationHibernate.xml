	<bean id="hbnTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory" ref="hbnSessionFactory" />
	</bean>
		
		
	<bean id="hbnTransactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="hbnSessionFactory" />
<!-- 		<property name="dataSource" ref="dataSource" /> -->
	</bean>
	
	<!-- 配置事务的传播特性 -->
	<tx:advice id="hbnTxAdvice" transaction-manager="hbnTransactionManager">
		<tx:attributes>
			<tx:method name="test*" propagation="REQUIRED" />
