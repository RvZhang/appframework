		</tx:attributes>
	</tx:advice>


	<!-- 那些类的哪些方法参与事务 --> 
	<aop:config>
<!-- 		<aop:pointcut id="facade" expression="execution(* org.jiucai.test.service.*Manager*.*(..))" /> -->
<!-- 		<aop:advisor advice-ref="hbnTxAdvice" pointcut-ref="facade" /> -->

		<aop:advisor advice-ref="hbnTxAdvice" pointcut="execution(* test.hbn.*Dao*.*(..))" />
	</aop:config>
	

